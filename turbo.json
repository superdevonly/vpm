{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "OPENAI_API_KEY",
    "STABILITY_API_KEY",
    "FAL_API_KEY",
    "REPLICATE_API_TOKEN",
    "MONGODB_URI",
    "NODE_ENV",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_REGION",
    "NEXT_PUBLIC_PRIVY_APP_ID",
    "NEXT_PUBLIC_LIVEPEER_API_KEY",
    "NEXT_PUBLIC_LIVEPEER_LIVESTREAM_PLAYBACKID",
    "AWS_S3_BUCKET",
    "NEXT_PUBLIC_USER_VIDEOS_CREDITS_DEFAULT",
    "NEXT_PUBLIC_USER_VIDEOS_COUNT",
    "NEXT_PUBLIC_USER_IMAGES_CREDITS_DEFAULT",
    "NEXT_PUBLIC_USER_VIDEOS_CREDITS_TOPUP",
    "NEXT_PUBLIC_USER_IMAGES_CREDITS_TOPUP",
    "NEXT_PUBLIC_CREDIT_PAYMENT_GATEWAY_URL",
    "DYNAMODB_USER_CREDITS_TABLE_NAME",
    "LEMONSQUEEZY_API_KEY",
    "LEMONSQUEEZY_WEBHOOK_SECRET",
    "NEXT_PUBLIC_APP_URL",
    "PRIVY_APP_SECRET",
    "DYNAMODB_USER_LIVEPEER_ITEMS_TABLE_NAME",
    "DYNAMODB_LIVESTREAM_TABLE_NAME",
    "NEXT_PUBLIC_USER_VIDEOS_CREDITS_PATRON_TOPUP",
    "NEXT_PUBLIC_USER_IMAGES_CREDITS_PATRON_TOPUP",
    "NEXT_PUBLIC_STANDARD_PRODUCT_ID",
    "NEXT_PUBLIC_PATRON_PRODUCT_ID",
    "NEXT_PUBLIC_CREDIT_PAYMENT_STANDARD_GATEWAY_URL",
    "NEXT_PUBLIC_CREDIT_PAYMENT_PATRON_GATEWAY_URL",
    "NEXT_PUBLIC_LIVESTREAM_GENERATIONS_PER_SONG"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
